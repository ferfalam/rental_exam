<%= form_with(model: protery, local: true) do |form| %>
  <% if protery.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(protery.errors.count, "error") %> prohibited this protery from being saved:</h2>

      <ul>
      <% protery.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :property  %>
    <%= form.text_field :property %>
  </div>

  <div class="field">
    <%= form.label :rent %>
    <%= form.number_field :rent %>RWF
  </div>

  <div class="field">
    <%= form.label :building_age %>
    <%= form.number_field :building_age %>year/years old
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_area :address %>
  </div>

  <div class="field">
    <%= form.label :remarks, "Remark" %>
    <%= form.text_area :remarks %>
  </div>

  <hr>
  <% if action_name == "new" %>
    <% 2.times do |n| %>
      <%= form.fields_for(:railways) do |f| %>
        <h2>Name of railway line<%= n+1 %> </h2>
        <div class="field">
          <%= f.label :name, "Name of railway" %>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label :station_name, "Station name" %>
          <%= f.text_field :station_name %>
        </div>
        <div class="field">
          <%= f.label :time, "How many minutes walk" %>
          <%= f.number_field :time%>min/mins
        </div>
      <% end %>
    <% end %>
  <% end %>
  <%num = 0%>
  <% if action_name == "edit" %>
    <%= form.fields_for(:railways) do |f| %>
      <%num = num+1%>
      <h2>Name of railway line<%=num%></h2>
      <div class="field">
        <%= f.label :name, "Name of railway" %>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :station_name, "Station name" %>
        <%= f.text_field :station_name %>
      </div>
      <div class="field">
        <%= f.label :time, "How many minutes walk" %>
        <%= f.number_field :time%>min/mins
      </div>
    <% end %>  
  <% end %>
  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
